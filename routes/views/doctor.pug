  }
  .name-line {
  width: 70%;
  }
  .name-line-2 {
  width: 30%;
  }
section(style='padding: 50px 0px;')
  .container.box-1
    .row.row1(style='padding: 10px;')
      .col-md-7.doc
        h5.name Dr. #{doctorname}
        p #{doctorsepecilization}
      .col-md-5(style='display: flex;')
        div(style='flex-basis: 70%; ')
          .power
            h6(style='font-weight:600;font-size:13px;margin-bottom: 0px;') Powered By:
            p
              a www.petpolio.com
            p(style='font-size:14px') Phone: +91 9876543210
        div(style='flex-basis: 30%;')
          img.logo(src='http://54.212.108.156:3000/api/uploads/logo.png' alt='')
    .row.row2(style='padding: 10px; margin-top: 10px;')
      .col-md-12
        hr(style='border-top: 1px solid #3050ff;')
      .col-md-4
        h5
          | Owner&apos;s Name: 
          span  #{owner_name}
      .col-md-4
        h5
          | Pet Type: 
          span  #{pet_type}
      .col-md-4
        h5
          | Breed: 
          span  #{breed}
      .col-md-4
        h5
          | Sex: 
          span  #{sex}
      .col-md-4
        h5
          | Weight: 
          span  #{weight}
      .col-md-4
        h5
          | Age: 
          span  #{age} years
      .col-md-4
        h5
          | Diagnosis: 
          span  #{diagnosis} years
      .col-md-4
        h5
          | Sub diagnosis: 
          span  #{sub_diagnosis} years
      .col-md-12
        hr(style='border-top: 1px solid #3050ff;')
    .row.row3(style='padding: 10px')
      .col-md-12
        h3 Allegories:
        table(style='width:100%')
          // <caption>Monthly savings</caption>
          tr
            td
              | #{allegroies}
    .row.row3(style='padding: 10px')
      .col-md-12
        h3 Prescription:
        table(style='width:100%')
          // <caption>Monthly savings</caption>
          tr
            th(style='width: 20%;font-size: 14px;color: #919090;text-align:center') Tablet Name
            th(style='width: 20%;font-size: 14px;color: #919090;text-align:center') Quantity
            th(style='width: 20%;font-size: 14px;color: #919090;text-align:center') Consumption
          each n in Prescription_data
            tr
               td= n.Tablet_name
               td= n.Quantity
               td= n.consumption
      .col-md-12
        h3 Doctor comments:
        table(style='width:100%')
          // <caption>Monthly savings</caption>
          tr
            span  #{doctor_commeents}
            
    .row.row1(style='padding: 10px;')
      .col-md-12.doc(style='text-align:right;')
        img.logo(src='https://sgp1.digitaloceanspaces.com/quickcompany/trademark/25c298bee64b101a.jpg' style='width: 120px;height: 40px;' alt='')
        p (DR.#{doctorname})
