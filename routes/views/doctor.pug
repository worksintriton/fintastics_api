style.
  .box-1 {
  background-color: #fff;
  border: 1px solid #aaa8a8;
  }
  .name {
  font-size: 18px;
  font-weight: 600;
  color: #fff;
  font-style: italic;
  margin: 0px;
  }
  p {
  margin-bottom: 2px;
  margin-top: 2px;
  font-size: 13px;
  }
  h6 {
  margin-top: 0px;
  }
  .logo {
  background: #fff;
  padding: 10px;
  width: 100px;
  }
  .row1 {
  padding: 10px;
  background: #009377;
  }
  .row1 p {
  color: #eaeaea;
  }
  .row1 p a {
  font-size: 14px;
  text-decoration: underline;
  }
